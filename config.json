{
  "database_path": "notes.db",
  "font_family": "Consolas",
  "font_size": 14,
  "hotkeys": {
    "global": {
      "show_window": "<alt>+s"
    },
    "local": {
      "toggle_focus": "F3",
      "add_note": "F4",
      "delete_note": "F8",
      "settings": "Ctrl+,",
      "navigate_up": "Alt+Up",
      "navigate_down": "Alt+Down",
      "navigate_left": "Alt+Left",
      "navigate_right": "Alt+Right"
    }
  }
}
